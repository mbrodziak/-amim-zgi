<?xml version="1.0" encoding="utf-8"?>
<com.example.mateusz.lamimozgi.views.StatisticItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/si_difficulty"
                android:background="@color/lava"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:fontFamily="@font/rubik_mono_one"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/si_progress"
                android:background="@color/lava"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|end"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:fontFamily="@font/rubik_mono_one"/>

        </LinearLayout>

    </LinearLayout>

</com.example.mateusz.lamimozgi.views.StatisticItem>