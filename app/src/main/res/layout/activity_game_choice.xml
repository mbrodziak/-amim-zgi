<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="@string/wybor_lamimozga"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:textSize="39sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sudoku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="230dp"
        android:background="@color/colorPrimary"
        android:text="@string/sudoku"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/wordSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="290dp"
        android:background="@color/colorPrimary"
        android:text="@string/wykreslanka"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/crossword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="350dp"
        android:background="@color/colorPrimary"
        android:text="@string/krzyzowka"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/guesswork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="410dp"
        android:background="@color/colorPrimary"
        android:text="@string/zgadywanki"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/hangman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="470dp"
        android:background="@color/colorPrimary"
        android:text="@string/wisielec"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

</RelativeLayout>