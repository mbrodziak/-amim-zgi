<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="@string/wybor_poziomu"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/Hard"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="500dp"
        android:contentDescription="@string/trudny"
        app:srcCompat="@drawable/trudny" />

    <ImageView
        android:id="@+id/Medium"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="320dp"
        android:contentDescription="@string/sredni"
        app:srcCompat="@drawable/sredni" />

    <ImageView
        android:id="@+id/Easy"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="140dp"
        android:contentDescription="@string/latwy"
        app:srcCompat="@drawable/latwy" />

</RelativeLayout>